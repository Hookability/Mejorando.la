* 
	margin 0
	padding 0

body, input, textarea, button
	font-family 'Open Sans', sans-serif
	font-size 13px
	color #303030

header
	background #303030
	height 45px

#main
	padding 30px


h1, h2, h3, h4, h5, h6 
	font-weight normal


h2 
	font-size 50px
	text-transform uppercase
	margin 10px 0
	margin-left 30px

	a
		background url(../images/add.gif) left top no-repeat
		width 35px 
		height 35px
		padding 0
		display inline-block
		margin-right 5px

		&:hover
			background-color transparent
			background-position left bottom

.subtitle
	margin-left 30px
	margin-top -10px

h3
	font-size 25px
	margin 3px 0
	text-transform uppercase


.curso
	float left
	width 310px
	height 250px
	margin 30px 
	position relative

	&.disabled
		opacity .4

	a
		background-color #303030
		color white
		padding 1px 5px
		display inline block
		text-decoration none

		&:hover, &.active
			background-color black

	h3 
		color white
		line-height 35px
		position absolute
		padding 5px
		left 0 
		right 0
		z-index 2

		a
			padding 0 5px 

	img
		-webkit-filter grayscale(100%)

	time
		text-transform uppercase
		font-weight bold
		display block
		margin-bottom 7px

	.bottom 
		font-size 12px
		margin-top 5px
		position relative
		width 100%

		.asis
			background url(../images/asistentes.gif) left center no-repeat
			padding-left 12px
			margin-right 10px

		a
			margin 0 2px

			&:first-of-type
				margin-left 0

		.actions 
			position absolute
			display block
			top 0
			right 0

			a
				background url(../images/edit.gif) left top no-repeat
				width 16px 
				height 16px
				padding 0
				display inline-block

				&:hover
					background-color transparent
					background-position left bottom


				&.del
					background-image url(../images/del.gif)

				&.preview
					width 26px
					background-image url(../images/preview.gif)









/**** Isotope Filtering ****/

.isotope-item 
	z-index 2


.isotope-hidden.isotope-item 
	pointer-events none
	z-index 1


/**** Isotope CSS3 transitions ****/

.isotope,
.isotope .isotope-item 
	-webkit-transition-duration 0.8s
	-moz-transition-duration 0.8s
	-ms-transition-duration 0.8s
	-o-transition-duration 0.8s
	transition-duration 0.8s


.isotope 
	-webkit-transition-property height, width
	-moz-transition-property height, width
	-ms-transition-property height, width
	-o-transition-property height, width
	transition-property height, width


.isotope .isotope-item 
	-webkit-transition-property -webkit-transform, opacity
	-moz-transition-property    -moz-transform, opacity
	-ms-transition-property     -ms-transform, opacity
	-o-transition-property      -o-transform, opacity
	transition-property         transform, opacity


/**** disabling Isotope CSS3 transitions ****/

.isotope.no-transition,
.isotope.no-transition .isotope-item,
.isotope .isotope-item.no-transition 
	-webkit-transition-duration 0s
	-moz-transition-duration 0s
	-ms-transition-duration 0s
	-o-transition-duration 0s
	transition-duration 0s


/**** Isotope filtering ****/

.isotope-item 
	z-index 2

.isotope-hidden.isotope-item
	pointer-events none
	z-index 1


.overlayed
	.overlay
		display block

	

.overlay
	background url(../images/cargando.gif) center center no-repeat, rgba(255, 255, 255, 0.9)
	position absolute
	top 0
	bottom 0
	left 0 
	right 0
	z-index 9
	display none

	.panel
		background white
		min-height 500px
		width 791px
		margin 50px auto
		-webkit-box-shadow 0 0 10px rgba(0, 0, 0, 0.4)
		padding 20px
		-webkit-transition -webkit-transform .5s, opacity .5s
		opacity 0
		position relative
		-webkit-transform translate3d(0, 100%, 0)

		&.loaded
			opacity 1
			-webkit-transform none

		.capa
			background white
			opacity 0.8
			position absolute
			top 0
			left 0
			right 0
			bottom 63px
			z-index 2
			display none

		&.sending
			.capa
				display block


input[type="text"], textarea
	background #303030
	color white
	border 1px solid white
	padding 5px 10px 
	font-size 16px
	width 300px

	&.input-large
		width 411px

	&.input-xlarge
		width 627px
	&.input-small
		width 157px

	&.input-small-pre
		width 144px

	&:focus
		background black

button
	background #303030
	color white
	border 0
	padding 10px 20px
	text-transform uppercase
	font-weight bold
	cursor pointer
	margin-top -6px
	border 1px solid white

	&:hover
		background black


form
	font-size 16px

	h2
		margin-left 0

		a 
			background-image url(../images/back.gif)
			width 32px
			height 36px
			margin-right 10px


	h3 
		background url(../images/email.gif) 5px center no-repeat
		padding-left 35px
		margin 0
		margin-top 10px


		&.docentes
			background-image url(../images/docentes.gif)

		&.calendario
			background-image url(../images/calendario.gif)


	textarea
		height 130px

	.drop
		display inline-block
		margin 1px
		border 2px dashed #303030
		text-align center
		width 352px
		line-height 130px
		height 136px
		overflow hidden
		position relative


		&.drop-docente
			width 136px

		&.error
			border-color red
			color red

		img
			position absolute
			opacity .5
			-webkit-filter grayscale(100%)

		strong
			z-index 1
			position relative

		&:hover	
			border-color black
			color black

	.row	
		overflow hidden

		textarea, .drop
			float left

	.notif
		text-align center
		margin 10px 0
		text-transform uppercase


	.error
		color red


	input.error::-webkit-input-placeholder, textarea.error::-webkit-input-placeholder
		color red
