@font-face
	font-family 'open sans'
	src url(" ../fonts/opensans-light-webfont.eot")
	src url(" ../fonts/opensans-light-webfont.eot?#iefix") format('embedded-opentype'), url(" ../fonts/opensans-light-webfont.woff") format('woff'), url(" ../fonts/opensans-light-webfont.ttf") format('truetype'), url(" ../fonts/opensans-light-webfont.svg#OpenSansLight") format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family 'open sans'
	src url(" ../fonts/opensans-bold-webfont.eot")
	src url(" ../fonts/opensans-bold-webfont.eot?#iefix") format('embedded-opentype'), url(" ../fonts/opensans-bold-webfont.woff") format('woff'), url(" ../fonts/opensans-bold-webfont.ttf") format('truetype'), url(" ../fonts/opensans-bold-webfont.svg#OpenSansBold") format('svg')
	font-weight bold
	font-style normal
 

* 
	margin 0
	padding 0


body 
	background #008fd5


body, input, textarea 
	color #707072
	font-size 13px
	font-family arial, sans-serif


li 
	list-style none


p 
	margin 10px 0


h1, h2, h3, h4, h5, h6 
	font-family 'open sans', arial, sans-serif
	color #2d2d2d
	text-transform uppercase
	font-weight normal


h2 
	font-size 16px


button 
	background #ffc33e
	border 0
	color #87620a
	padding 6px 20px
	cursor pointer
	-webkit-transition background-color .5s

	&:hover 
		background #ffd753


input[type="text"] 
	background #4a5765
	border 1px solid #707881
	padding 5px
	padding-left 37px
	margin 5px 0
	border-radius 2px
	width 200px

	&.error
		border-color red

	&:focus 	
		background-color white
		border-color #008fd5


input.nombre 
	 background-image url( ../images/nombre.gif)
	 background-position 11px 3px
	 background-repeat no-repeat

	&:focus 
		background-position 11px -59px


input.tel 
	 background-image url( ../images/tel.gif)
	 background-position 10px 6px
	 background-repeat no-repeat


	&:focus 
		background-position 10px -82px


input.email 
	 background-image url( ../images/direccion.gif)
	 background-position 14px 6px
	 background-repeat no-repeat


	&:focus 
		background-position 14px -80px


input.numero 
	 background-image url( ../images/numero.gif)
	 background-position 9px 6px
	 background-repeat no-repeat


	&:focus 
		background-position 9px -81px

input.input-small 
	width 36px
	padding-left 5px


input.input-medium
	width 120px
	padding-left 5px

.wrapper 
	width 1000px
	margin 0 auto


a
	color black

/* HEADER */
header 
	.wrapper 
		background #323e4a
		overflow hidden


	h1 
		float left
		background url( ../images/logo-bg.gif) right top no-repeat
		padding-right 22px

		a 
			display block
			background white
			padding 3px 10px

		img 
			display block


	li 
		float left
		margin-left 20px


	ul 
		overflow hidden
		float left
		background url( ../images/logos-bg.gif) left 22px repeat-x
		padding 3px 0 1px
		margin-left -12px
		padding-left 12px


/* MAIN */
.main
	margin-top 13px

	h1 
		background white
		color #323e4a
		margin auto
		text-align center
		font-size 25px
		padding 15px
		width 950px

	.wrapper
		background white



/* TOP */

.main-image 
	float left

.top
	overflow hidden

	.video 
		height 430px
		float left

.descripcion 
	background #323e4a url( ../images/pago-bg.gif) center bottom no-repeat
	color #fffefd
	float right
	width 274px
	height 400px
	text-align justify
	font-size 14px
	line-height 19px
	padding 15px 30px

	h1 
		margin 18px 0
		color #fffefd
		font-size 37px
		line-height 35px
		font-weight normal
		text-align left


	button.registrate
		text-transform uppercase
		text-align center
		border-bottom 3px solid #bf932b
		margin auto
		display block
		padding 5px 50px 15px
		line-height 18px
		margin-top 15px

		strong 
			font-size 28px
			display block


	.horarios 
		color #a0a5ab 
		font-size 12px
		text-align center
		line-height 13px

	.contacto 
		font-size 12px
		background #495662
		margin 15px -30px 0
		padding 5px 30px
		color #c7cfd7

		p 
			display inline-block
			padding 0 15px
			padding-left 45px
			margin 0
			background url(../images/skype.gif) left center no-repeat

			&.telefono
				background url(../images/telefono.gif) left center no-repeat

		a
			color #c7cfd7
			text-decoration none

		span 	
			text-transform uppercase
			color white
			display block
			margin-bottom -7px



	button.pago-main > span 
		background url( ../images/icons.gif) 15px 2px no-repeat
		padding-left 70px
		display inline-block


	.pago-content 
		text-align left
		position relative

		.final
			text-align center

			h1 
				text-align center

		.screen 
			left 0
			right 0
			position absolute
			display none

			&.active 
				display block

			&.step
				text-align center

				h1
					font-weight normal
					font-size 16px
					text-align center

					strong
						font-size 40px
						display block
						margin-bottom -10px

						span
							color #667183

				form
					margin-top -15px

					.pago-btns 
						margin-top 10px

					.notice 
						&.error
							color red

						a
							color #ffc43a

		button 
			text-transform uppercase
			font-weight bold
			color #fcfbf7
			background #0190d6
			border-bottom 5px solid #0d5b7f
			padding 12px 20px
			margin 0 5px
			-webkit-transition background-color .5s
			-moz-transition background-color .5s
			-ms-transition background-color .5s
			-o-transition background-color .5s
			transition background-color .5s

			&:hover 
				background #2fa0e8

		button.cancel 
			background #4b5765
			color #313d4b
			border-color #384653

			&:hover 
				background #5b6675


	.pago-methods 
		a 
			text-transform uppercase
			color #535f6f
			margin 10px
			width 100px
			display inline-block
			padding-top 105px
			cursor pointer

			&.tarjeta 
				background url( ../images/tarjeta.gif) right top no-repeat

			&.deposito 
				background url( ../images/deposito.gif) right top no-repeat


			&.active 
				background-position left top
				color #96a2b0
				cursor default


	.pago-count 
		margin-bottom 15px

		span 
			font-size 80px
			display block
			background url( ../images/count.gif) center center no-repeat

		a 
			font-size 50px
			display inline-block
			padding 0 5px
			line-height 40px
			margin 0 10px
			cursor pointer

			&.pago-mas 
				background #4b5765


				&:hover 
					color #2e3f47
					background white

			&.pago-menos 
				color #2e3f47
				padding 0 9px
				background white

				&:hover 
					background #4b5765
					color white




/* MIDDLE */
.middle 
	clear left
	overflow hidden
	padding-top 10px
	
	.tabs 
		float left
		width 665px


	.selector 
		display block
		background #eaedf2
		padding 22px 25px
		width 283px
		-webkit-transition background-color .5s
		-moz-transition background-color .5s
		-ms-transition background-color .5s
		-o-transition background-color .5s
		transition background-color .5s

		h2 
			font-weight normal
			margin 0 0 7px
			font-size 23px
			line-height 24px
			word-spacing -1px

			strong 
				font-size 14px
				display block

		h3 
			font-size 13px
			word-spacing 4
			text-transform none

		&:hover 
			background #ffc43a
			cursor pointer

		&.active 
			background #ffc43a url( ../images/selector-bg.gif) right center no-repeat



	ol 
		margin 20px 0
		margin-left 45px


	li 
		margin 7px 0
		list-style decimal


	.email 
		background #eaedf2
		width 333px
		float left
		font-size 15px

		address 
			padding 9px 25px
			font-style normal
	


	h2 
		font-size 30px


	.tabs.js 
		position relative

		.tab 
			position absolute
			left 333px
			top 0
			background white

	.direccion
		background #eaedf2
		width 333px
		height 232px
		float right
		font-size 12px
		text-align center

		address
			padding 9px 25px
			font-style normal

		h2 
			font-size 30px
			text-align left

/* DOCENTES */
.docentes 
	overflow hidden
	background #eaedf2 url(../images/docentes.png) center top repeat-y
	padding 0 10px
	border-top 10px solid #eaedf2
	border-bottom 10px solid #eaedf2
	margin 20px 0

	.docente 
		float left
		width 445px
		height 270px
		padding 20px

		&.docente1, &.docente2 
			height 250px

		&.docente2, &.docente4
			float right

		p 
			line-height 16px

			&:first-of-type
				margin-top 20px

		.pic
			background #008fd5
			padding 12px 20px 10px
			margin-left -20px
			margin-right -20px
			margin-top -20px

			img 
				float left
				margin-top -12px
				margin-right 15px

			h3
				color white
				font-size 13px

				a 
					color white
					text-decoration none

			strong 
				display block
				text-transform none
				font-size 25px
				font-weight normal

/* QUIERES */
.quieres 
	text-align center


	h2 
		font-size 47px
		font-weight normal
		line-height 39px
		margin 45px 165px 30px

	p 
		text-align left
		margin-left 220px
		margin-right 220px


	h3 
		margin 17px 0


	.video
		background #ffc43a
		margin-left -10px
		margin-right -10px
		margin-top 70px
		margin-bottom 57px
		height 290px

		a 
			background-size 50px 50px
			display block 
			position relative
			top -40px
			background white
			margin auto
			width 660px



/* FOOTER */
footer 
	background url( ../images/footer-bg.gif) left bottom repeat-x
	overflow hidden
	text-align center

	li 
		float left
		margin 0 50px


	ul 
		display inline-block
		margin 40px 0 60px

@media screen and (max-width:1000px) 
	.wrapper 
		width auto
	
	.main 
		h1
			width auto

	.top
		.descripcion 
			width auto
			height auto
			float none

		.video
			height auto
			float none

	.main-image 
		width 100%
		float none

	.pago 
		width auto
		float none

		button.pago-main
			margin-right -25px	

	.middle 
		overflow visible
	

		.selector 
			width auto
	

		.tabs 
			width auto
			float none
	

		.email 
			width auto
			float none

		.direccion
			width auto
			float none

	

	.docentes 
		background-image none

		.docente 
			width auto
			background white
			float none
			height auto

			&.docente2, &.docente4
				float none
	

	.quieres 
		h2 
			font-size 30px
			line-height 30px
			margin-left 5px
			margin-right 5px
	
		iframe 
			width 100%
	

		.video 
			margin-left 0
			margin-right 0

			iframe, a, img
				width 100%

		p 
			margin-left 10px
			margin-right 10px
	

	footer li 
		float none
	


.video 
	position relative

	button
		position absolute
		top 0
		bottom 0
		right 0
		left 0 
		background url(../images/play.png) center center no-repeat
		opacity 0.6
		-webkit-transition opacity .5s
		-moz-transition opacity .5s
		-ms-transition opacity .5s
		-o-transition opacity .5s
		transition opacity .5s

		&:hover
			opacity 1