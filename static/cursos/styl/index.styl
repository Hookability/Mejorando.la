* 
	margin 0
	padding 0


body 
	background #008fd5


body, input, textarea 
	color #707072
	font-size 13px
	font-family arial, sans-serif


li 
	list-style none


p 
	margin 10px 0


h1, h2, h3, h4, h5, h6 
	font-family 'open sans', arial, sans-serif
	color #2d2d2d
	text-transform uppercase
	font-weight normal


h2 
	font-size 16px


button 
	background #ffc33e
	border 0
	color #87620a
	padding 6px 20px
	cursor pointer
	-webkit-transition background-color .5s
	-webkit-transition background-color .5s
	-moz-transition background-color .5s
	-ms-transition background-color .5s
	-o-transition background-color .5s
	transition background-color .5s

	&:hover 
		background #ffd753


input[type="text"] 
	background #4a5765
	border 1px solid #707881
	padding 5px
	padding-left 37px
	margin 5px 0
	border-radius 2px
	width 200px

	&.error::-webkit-input-placeholder
		color red

	&.error:-moz-placeholder
		color red

	&:focus 	
		background-color white
		border-color #008fd5


input.nombre 
	 background-image url( ../images/nombre.gif)
	 background-position 11px 3px
	 background-repeat no-repeat

	&:focus 
		background-position 11px -59px


input.tel 
	 background-image url( ../images/tel.gif)
	 background-position 10px 6px
	 background-repeat no-repeat


	&:focus 
		background-position 10px -82px


input.email 
	 background-image url( ../images/direccion.gif)
	 background-position 14px 6px
	 background-repeat no-repeat


	&:focus 
		background-position 14px -80px


input.numero 
	 background-image url( ../images/numero.gif)
	 background-position 9px 6px
	 background-repeat no-repeat


	&:focus 
		background-position 9px -81px

input.input-small 
	width 36px
	padding-left 5px


input.input-medium
	width 120px
	padding-left 5px

.wrapper 
	width 1000px
	margin 0 auto


a
	color black

/* HEADER */
header 
	.wrapper 
		background #323e4a
		overflow hidden


	h1 
		float left
		background url( ../images/logo-bg.gif) right top no-repeat
		padding-right 22px

		a 
			display block
			background white
			padding 3px 10px

		img 
			display block


	li 
		float left
		margin-left 20px


	ul 
		overflow hidden
		float left
		background url( ../images/logos-bg.gif) left 22px repeat-x
		padding 3px 0 1px
		margin-left -12px
		padding-left 12px


/* MAIN */
.main
	margin-top 13px

	h1 
		background white
		color #323e4a
		margin auto
		text-align center
		font-size 25px
		padding 15px
		width 950px

	.wrapper
		background white



/* TOP */

.main-image 
	float left

.top
	overflow hidden

	.video 
		height 430px
		float left

.descripcion 
