.tweets
	background #0186C7
	padding 20px
	padding-bottom 80px
	padding-top 40px
	position relative
	text-align center
	font-family 'open sans', arial, sans-serif !important
	.content 
		position relative
	.mastweets 
		border-bottom 3px solid #BF932B
	.vermastweets
		display none 
	h3
		text-align center
		font-weight bold
		color white
		font-size 20px
		margin-bottom 10px
    
	&:before
		border-bottom 30px solid transparent
		border-left 40px solid white
		content ""
		left 0 
		position absolute
		top 0 
	&:after
		content ""
		position absolute
		bottom 0 
		right 0 
		border-right 40px solid white
		border-top 30px solid transparent
	.twitter-tweet-rendered
		display inline-block !important
		max-width 450px !important
		vertical-align top
		&:nth-of-type(odd)
			// position relative 
			// top 50px
			margin-right 15px !important
		.twt-border
			height 170px !important

		.twt-media.e-content
			.twt-media-link
				img 
					display none !important
	.cards-base.cards-multimedia
		img 
			display none !important
	.twt-tweet .e-content .p-name
	.twt-o .e-content .p-name a 
	.twt-o .e-content .p-name b
		font-family 'open sans', arial, sans-serif !important

@media screen and (max-width:1000px)
	.tweets
		.twitter-tweet-rendered
			max-width none !important
			display block !important
			&:nth-of-type(odd)
				position relative 
				top 0
				margin-right 0 !important
			.twt-border
				max-width none !important